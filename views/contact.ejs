<div class="container">
  <div class="row">
    <div class="col">
      <h4>Daftar Kontak</h4>
      <a href="/contact/add" class="btn btn-primary my-2"
        ><i class="bi bi-plus-circle me-2"></i>Tambah Data Contact</a
      >

      <% if (msg.length != 0) { %>
      <div class="alert alert-success mt-3" role="alert"><%= msg %></div>
      <% } %>

      <table class="table" aria-describedby="table">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Nama</th>
            <th scope="col">Email</th>
            <th scope="col">No Hp</th>
            <th scope="col">Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% if (contacts.length === 0) { %>
          <tr>
            <td colspan="4">
              <div class="alert alert-danger" role="alert">Contact kosong.</div>
            </td>
          </tr>

          <% } else { %> <% var no = 1; %> <% contacts.forEach(contact => { %>
          <tr>
            <th scope="row"><%= no++ %></th>
            <td><%= contact.nama %></td>
            <td><%= contact.email %></td>
            <td><%= contact.nohp %></td>
            <td>
              <a
                href="/contact/<%= contact.nama %> "
                class="btn btn-success badge rounded-pill"
                ><i class="bi bi-info-circle"></i> detail</a
              >
            </td>
          </tr>
          <% }) %> <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>
